.action-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.search-bar {
    position: relative;
    width: 100%;
    max-width: 400px;
}

.search-input {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 2.5rem;
    background-color: rgba(30, 41, 59, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: white;
    font-size: 0.95rem;
    transition: all 0.2s;
}

.search-input:focus {
    outline: none;
    border-color: #3b82f6;
    background-color: rgba(30, 41, 59, 0.9);
}

.search-icon {
    position: absolute;
    left: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    color: rgba(255, 255, 255, 0.5);
    pointer-events: none;
}

.action-buttons {
    display: flex;
    gap: 0.75rem;
}

.action-btn {
    padding: 0.75rem 1.25rem;
    background-color: rgba(30, 41, 59, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: white;
    font-size: 0.95rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s;
}

.action-btn:hover {
    background-color: rgba(51, 65, 85, 0.8);
}

.action-btn i {
    font-size: 1.1rem;
}

.action-btn-primary {
    background-color: #3b82f6;
    border-color: #3b82f6;
}

.action-btn-primary:hover {
    background-color: #2563eb;
}

.no-rooms-message {
    text-align: center;
    padding: 2rem;
    color: rgba(255, 255, 255, 0.6);
}

.no-rooms-message i {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    opacity: 0.5;
}

.room-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 24px;
    height: 24px;
    background-color: #3b82f6;
    color: white;
    font-size: 0.85rem;
    border-radius: 12px;
    padding: 0 0.5rem;
    margin-left: 0.75rem;
}

.live-indicator {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: #10b981;
    margin-right: 0.5rem;
    position: relative;
}

.live-indicator::after {
    content: "";
    position: absolute;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 1px solid #10b981;
    top: -3px;
    left: -3px;
    animation: pulse 1.5s infinite;
}

.participant-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.participant-item {
    display: flex;
    align-items: center;
    padding: 0.75rem;
    border-radius: 8px;
    margin-bottom: 0.5rem;
    transition: all 0.2s;
}

.participant-item:hover {
    background-color: rgba(255, 255, 255, 0.05);
}

.participant-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 1rem;
    position: relative;
}

.participant-avatar.online::after {
    content: "";
    position: absolute;
    width: 10px;
    height: 10px;
    background-color: #10b981;
    border-radius: 50%;
    bottom: 0;
    right: 0;
    border: 2px solid rgba(30, 41, 59, 0.7);
}

.participant-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.participant-info {
    flex: 1;
}

.participant-name {
    color: white;
    font-weight: 500;
    font-size: 0.95rem;
    margin-bottom: 0.25rem;
}

.participant-status {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.8rem;
}

.participant-actions {
    color: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: all 0.2s;
}

.participant-actions:hover {
    color: white;
}

/* Room styles */
.room-navbar {
    display: flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background-color: rgba(15, 23, 42, 0.8);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.room-navbar-left {
    display: flex;
    align-items: center;
    flex: 1;
}

.room-navbar-btn {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    background-color: rgba(255, 255, 255, 0.1);
    margin-right: 1rem;
    transition: all 0.2s;
    text-decoration: none;
}

.room-navbar-btn:hover {
    background-color: rgba(255, 255, 255, 0.2);
}

.room-navbar-title {
    font-size: 1.1rem;
    font-weight: 500;
    color: white;
    margin-right: 1rem;
}

.room-navbar-info {
    display: flex;
    align-items: center;
}

.room-status {
    display: flex;
    align-items: center;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.7);
    margin-right: 1.5rem;
}

/* Editor styles */
.editor-container {
    display: flex;
    height: calc(100vh - 60px);
}

.editor-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.editor-toolbar {
    display: flex;
    align-items: center;
    padding: 0.5rem 1rem;
    background-color: rgba(15, 23, 42, 0.8);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.editor-toolbar-section {
    display: flex;
    align-items: center;
    margin-right: 1.5rem;
}

.editor-toolbar-label {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.7);
    margin-right: 0.5rem;
}

.editor-toolbar-select {
    background-color: rgba(30, 41, 59, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: white;
    font-size: 0.85rem;
    padding: 0.35rem 0.75rem;
    outline: none;
}

.editor-toolbar-btn {
    width: 36px;
    height: 36px;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    background-color: rgba(255, 255, 255, 0.1);
    margin-left: 0.5rem;
    transition: all 0.2s;
    border: none;
    cursor: pointer;
}

.editor-toolbar-btn:hover {
    background-color: rgba(255, 255, 255, 0.2);
}

.editor-toolbar-btn-primary {
    background-color: #3b82f6;
}

.editor-toolbar-btn-primary:hover {
    background-color: #2563eb;
}

.editor-wrapper {
    flex: 1;
    overflow: hidden;
    position: relative;
}

.editor-sidebar {
    width: 320px;
    background-color: rgba(15, 23, 42, 0.6);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-left: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    flex-direction: column;
    height: 100%;
}

.sidebar-tabs {
    display: flex;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.sidebar-tab {
    flex: 1;
    padding: 0.75rem;
    text-align: center;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s;
    border-bottom: 2px solid transparent;
}

.sidebar-tab:hover {
    color: white;
}

.sidebar-tab.active {
    color: white;
    border-bottom-color: #3b82f6;
}

.sidebar-tab i {
    margin-right: 0.5rem;
}

.sidebar-content {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
}

.tab-content {
    display: none;
    height: 100%;
}

.tab-content.active {
    display: block;
}

/* Chat styles */
.chat-messages {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1rem;
    height: 100%;
    overflow-y: auto;
    flex: 1;
    padding-right: 5px;
    scrollbar-width: thin;
    -webkit-overflow-scrolling: touch;
    overscroll-behavior: contain;
    will-change: scroll-position;
}

.chat-message {
    display: flex;
    margin-bottom: 1rem;
}

.chat-message.own {
    flex-direction: row-reverse;
}

.chat-message.own .chat-avatar {
    margin-right: 0;
    margin-left: 0.75rem;
}

.chat-message.own .chat-content {
    align-items: flex-end;
}

.chat-message.own .chat-text {
    background-color: #3b82f6;
    color: white;
    border-radius: 16px 16px 4px 16px;
}

.chat-avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    margin-right: 0.75rem;
    flex-shrink: 0;
    overflow: hidden;
}

.chat-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.chat-content {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.chat-header {
    display: flex;
    align-items: baseline;
    margin-bottom: 0.25rem;
}

.chat-username {
    font-weight: 600;
    color: white;
    margin-right: 0.5rem;
}

.chat-time {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
}

.chat-text {
    background-color: rgba(30, 41, 59, 0.7);
    padding: 0.75rem 1rem;
    border-radius: 4px 16px 16px 16px;
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.95rem;
    max-width: 80%;
    align-self: flex-start;
}

.system-message {
    text-align: center;
    margin: 10px 0;
}

.system-message .chat-text {
    display: inline-block;
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.7);
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 0.8rem;
}

.chat-input-container {
    margin-top: auto;
    padding: 0.75rem 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.chat-input-wrapper {
    display: flex;
    align-items: center;
    background-color: rgba(30, 41, 59, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 0.25rem 0.25rem 0.25rem 1rem;
}

.chat-input {
    flex: 1;
    background: transparent;
    border: none;
    color: white;
    font-size: 0.95rem;
    padding: 0.5rem 0;
    outline: none;
}

.chat-send {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    background-color: #3b82f6;
    border: none;
    cursor: pointer;
    transition: all 0.2s;
}

.chat-send:hover {
    background-color: #2563eb;
}

/* Settings styles */
.settings-section {
    margin-bottom: 1.5rem;
}

.settings-title {
    font-size: 1rem;
    font-weight: 500;
    color: white;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.settings-option {
    display: flex;
    flex-direction: column;
    margin-bottom: 1rem;
}

.settings-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 0.5rem;
}

.settings-select, .settings-input {
    background-color: rgba(30, 41, 59, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: white;
    font-size: 0.9rem;
    padding: 0.5rem 0.75rem;
    outline: none;
}

.terminal-container {
    background-color: #1a1a1a;
    border-radius: 8px;
    padding: 1rem;
    margin-top: 1rem;
    display: none;
    flex-direction: column;
    height: 200px;
    overflow-y: auto;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', monospace;
}

.terminal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
}

.terminal-title {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.85rem;
}

.terminal-actions {
    display: flex;
    gap: 0.5rem;
}

.terminal-btn {
    width: 24px;
    height: 24px;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.7);
    background-color: rgba(255, 255, 255, 0.1);
    border: none;
    cursor: pointer;
    transition: all 0.2s;
    font-size: 0.8rem;
}

.terminal-btn:hover {
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
}

.terminal-content {
    flex: 1;
    overflow-y: auto;
    font-size: 0.9rem;
}

.terminal-line {
    margin-bottom: 0.5rem;
    line-height: 1.4;
    display: flex;
}

.terminal-prompt {
    color: #10b981;
    margin-right: 0.5rem;
}

.terminal-output {
    color: rgba(255, 255, 255, 0.8);
    word-break: break-all;
}

.terminal-input-line {
    display: flex;
    margin-top: auto;
}

.terminal-input {
    flex: 1;
    background: transparent;
    border: none;
    color: white;
    font-family: inherit;
    font-size: inherit;
    outline: none;
}

/* Cursor styles */
.cm-user-cursor {
    position: absolute;
    width: 2px;
    height: 18px;
    background-color: #10b981;
    z-index: 3;
    pointer-events: none;
    transition: left 0.1s ease, top 0.1s ease;
}

.cm-user-cursor::after {
    content: attr(data-user);
    position: absolute;
    top: -18px;
    left: 0;
    font-size: 11px;
    background-color: #10b981;
    color: white;
    padding: 2px 6px;
    border-radius: 4px;
    white-space: nowrap;
}

/* Animations */
@keyframes gradientBG {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

@keyframes pulse {
    0% { transform: scale(1); opacity: 1; }
    100% { transform: scale(1.5); opacity: 0; }
}

/* Mobile responsiveness */
@media (max-width: 1024px) {
    .sidebar {
        width: 220px;
    }

    .editor-sidebar {
        width: 280px;
    }
}

@media (max-width: 768px) {
    .dashboard-container {
        flex-direction: column;
    }

    .sidebar {
        width: 100%;
        height: auto;
        padding: 1rem;
    }

    .editor-container {
        flex-direction: column;
    }

    .editor-sidebar {
        width: 100%;
        height: 300px;
        border-left: none;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }
}

@media (max-width: 640px) {
    .room-navbar-info {
        display: none;
    }

    .editor-toolbar {
        flex-wrap: wrap;
    }

    .editor-toolbar-section {
        margin-bottom: 0.5rem;
    }
}
