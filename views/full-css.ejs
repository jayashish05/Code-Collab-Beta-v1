.ios-cta {
    text-align: center;
    margin-bottom: 2rem;
}

body.dark-mode .ios-feature {
    background: var(--ios-dark-card-bg);
}

body.dark-mode .ios-feature p {
    color: var(--ios-dark-text-secondary);
}

body.dark-mode .ios-btn-secondary {
    color: var(--ios-primary-light);
